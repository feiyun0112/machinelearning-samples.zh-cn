@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
    #headerDiv {
        color: blue;
        text-align: center;
    }
</style>

<div id="headerDiv"><h2>Online Image Classification (Model Trained with ML.NET - TensorFlow)</h2></div>
<br />
<div>
    <form method="post" enctype="multipart/form-data">
        <div>
            <p>Upload a file image using this form to predict its label:</p>
        </div>
        <div>
            <input type="file" name="imageFile">
        </div>
        <div>
            <br />
            <input type="submit" value="Upload File" name="submit">
        </div>

    </form>
</div>
<br />
<br />

<div id="divImageId" class="col-md-10"></div>
<div id="divPrediction" class="col-md-10"></div>
<div id="divProbability" class="col-md-10"></div>
<div id="divExecutionTime" class="col-md-10"></div>

<script src="~/js/upload.js"></script>

<br />
<br />
<br />

<script type="text/javascript">
    window.onload = function hello() {
        document.getElementById('divPrediction').innerHTML = 'Area to show the awesome prediction!';
    };
</script>

